<?xml version="1.0"?>
<config>
      <modules>
        <Yli_ImageResize>
          <version>0.1.0</version>
        </Yli_ImageResize>
      </modules>
      <global>
          <helpers>
            <imageresize>
              <class>Yli_ImageResize_Helper</class>
            </imageresize>
            <catalog>
            	<rewrite>
            		<image>Yli_ImageResize_Helper_Image</image>
            	</rewrite>
            </catalog>
          </helpers>
          <models>
             <imageresize>
                <class>Yli_ImageResize_Model</class>
             </imageresize>
             <catalog>
             	<rewrite>
             		<product_image>Yli_ImageResize_Model_Product_Image</product_image>
             	</rewrite>
             </catalog>
          </models>
          <resources>
            <imageresize_setup>
                <setup>
                    <module>Yli_ImageResize</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </imageresize_setup>
        </resources>
      </global>
</config>